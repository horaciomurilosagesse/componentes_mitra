    <script>
        const MITRA_UPDATE_EVENT_NAME = 'mitra-update-crm-details-component';

        function updateMitra() {
            document.body.dispatchEvent(new CustomEvent(MITRA_UPDATE_EVENT_NAME));
        }
        
        function mapQueryToObject(queryResult) {
            if (!queryResult || !queryResult.data || !queryResult.headers) return [];
            const headers = queryResult.headers.map(h => h.name.toUpperCase());
            return queryResult.data.map(row => {
                const obj = {};
                headers.forEach((header, index) => {
                    obj[header] = row[index];
                });
                return obj;
            });
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebar-overlay');
            if (sidebar && overlay) {
                sidebar.classList.toggle('mobile-open');
                sidebar.classList.toggle('hidden');
                overlay.classList.toggle('hidden');
            }
        }

        function switchTab(tabName) {
            const contents = ['cabecalho', 'formulario', 'anexos'];
            contents.forEach(id => {
                const el = document.getElementById(`content-${id}`);
                if (el) el.classList.add('hidden');
                const link = document.getElementById(`tab-${id}`);
                if (link) {
                    link.classList.remove('border-brand-blueDark', 'text-brand-blueDark');
                    link.classList.add('border-transparent', 'text-slate-500');
                }
            });

            const selectedContent = document.getElementById(`content-${tabName}`);
            if (selectedContent) selectedContent.classList.remove('hidden');
            
            const selectedLink = document.getElementById(`tab-${tabName}`);
            if (selectedLink) {
                selectedLink.classList.remove('border-transparent', 'text-slate-500');
                selectedLink.classList.add('border-brand-blueDark', 'text-brand-blueDark');
            }
        }

        function populateAllFields(data) {
            const formatDate = (dateString) => (dateString || '').substring(0, 10);

            // --- POPULATE SIDEBAR ---
            const sidebarTitle = document.getElementById('sidebar-title');
            if (sidebarTitle) sidebarTitle.innerText = data.TITULO || 'Carregando...';
            document.getElementById('sidebar-description').innerText = data.TITULO || '...';
            document.getElementById('sidebar-cliente').innerText = data.CLIENTE || 'N/A';
            document.getElementById('sidebar-contato').innerText = data.CONTATO || 'N/A';
            document.getElementById('sidebar-gestor').innerHTML = `<div class="w-6 h-6 rounded-full bg-slate-200 flex items-center justify-center text-xs font-bold text-slate-600">${(data.GESTOR || 'G?').substring(0, 2)}</div> ${data.GESTOR || 'N/A'}`;
            
            // Atualizar badge de prioridade com cores dinâmicas
            const prioridadeEl = document.getElementById('sidebar-prioridade');
            if (prioridadeEl) {
                const prioridade = data.PRIORIDADE || 'N/A';
                prioridadeEl.innerText = prioridade;
                prioridadeEl.className = 'inline-block text-xs font-bold px-3 py-1.5 rounded-full';
                if (prioridade === 'Alta') {
                    prioridadeEl.className += ' bg-red-100 text-red-700';
                } else if (prioridade === 'Média') {
                    prioridadeEl.className += ' bg-yellow-100 text-yellow-700';
                } else if (prioridade === 'Baixa') {
                    prioridadeEl.className += ' bg-green-100 text-green-700';
                } else {
                    prioridadeEl.className += ' bg-slate-100 text-slate-700';
                }
            }
            
            // --- POPULATE CABEÇALHO TAB ---
            document.getElementById('input-descricao').value = data.TITULO || '';
            document.getElementById('select-gestor').value = data.ID_GESTOR || '';
            document.getElementById('select-prioridade').value = data.PRIORIDADE || '';
            document.getElementById('input-num-so').value = data.NUM_SO || '';
            document.getElementById('input-data').value = (data.DATA_CRIACAO || '').substring(0, 10);
            document.getElementById('select-cliente').value = data.CLIENTE || '';
            document.getElementById('select-tipo-cliente').value = data.TIPO || '';
            document.getElementById('input-contato').value = data.CONTATO || '';
            document.getElementById('input-email').value = data.EMAIL || '';
            document.getElementById('input-data-retorno').value = (data.DATA_RETORNO || '').substring(0, 10);
            document.getElementById('input-num-rfq').value = data.NUM_RFQ || '';
            document.getElementById('select-acordo-conf').value = data.ACORDO_CONFIDENCIALIDADE || '';
            document.getElementById('select-manual-qualidade').value = data.MANUAL_QUALIDADE || '';
            document.getElementById('input-cond-pag-peca').value = data.COND_PAG_PECA || '';
            document.getElementById('input-cond-pag-ferramental').value = data.COND_PAG_FERRAMENTAL || '';
            document.getElementById('input-cond-entrega').value = data.CONDICAO_ENTREGA || '';
            document.getElementById('input-sop').value = (data.SOP || '').substring(0, 10);

            // --- POPULATE FORMULÁRIO TAB ---
            document.getElementById('form_part_number').value = data.PART_NUMBER || '';
            document.getElementById('form_descricao_peca').value = data.DESCRICAO_PECA || '';
            document.getElementById('form_cliente').value = data.CLIENTE || '';
            document.getElementById('form_projeto').value = data.PROJETO_TEXTO || '';
            document.getElementById('form_num_so').value = data.NUM_SO || '';

            document.getElementById('form_embalagem_retornavel').checked = data.EMBALAGEM_RETORNAVEL == '1';
            document.getElementById('form_embalagem_descartavel').checked = data.EMBALAGEM_DESCARTAVEL == '1';

            document.getElementById('form_volume_ano1').value = data.VOLUME_ANO1 || '';
            document.getElementById('form_volume_ano2').value = data.VOLUME_ANO2 || '';
            document.getElementById('form_volume_ano3').value = data.VOLUME_ANO3 || '';

            document.getElementById('form_data').value = formatDate(data.DATA_FORM);
            document.getElementById('form_data_retorno').value = formatDate(data.DATA_RETORNO_FORM);

            document.getElementById('form_proc_atual_spray').checked = data.PROC_ATUAL_SPRAYUP_HAND == '1';
            document.getElementById('form_proc_atual_rtm').checked = data.PROC_ATUAL_RTM == '1';
            document.getElementById('form_proc_atual_smc').checked = data.PROC_ATUAL_SMC == '1';
            document.getElementById('form_proc_atual_pintura').checked = data.PROC_ATUAL_PINTURA == '1';
            document.getElementById('form_proc_atual_injetado').checked = data.PROC_ATUAL_INJETADO == '1';
            document.getElementById('form_proc_atual_chapa').checked = data.PROC_ATUAL_CHAPA_METALICA == '1';
            document.getElementById('form_proc_atual_outro').value = data.PROC_ATUAL_OUTRO || '';

            document.getElementById('form_proc_orc_spray').checked = data.PROC_ORCAMENTO_SPRAYUP_HAND == '1';
            document.getElementById('form_proc_orc_rtm').checked = data.PROC_ORCAMENTO_RTM == '1';
            document.getElementById('form_proc_orc_smc').checked = data.PROC_ORCAMENTO_SMC == '1';
            document.getElementById('form_proc_orc_pintura').checked = data.PROC_ORCAMENTO_PINTURA == '1';
            document.getElementById('form_proc_orc_outro').value = data.PROC_ORCAMENTO_OUTRO || '';

            document.getElementById('form_proj_alter_sim').checked = data.NECESSITA_ALTERACAO_PROJETO_SIM == '1';
            document.getElementById('form_proj_alter_nao').checked = data.NECESSITA_ALTERACAO_PROJETO_NAO == '1';
            document.getElementById('form_proj_resp_tec').checked = data.RESPONSAVEL_ALTERACAO_TECNOFIBRAS == '1';
            document.getElementById('form_proj_resp_cli').checked = data.RESPONSAVEL_ALTERACAO_CLIENTE == '1';
            document.getElementById('form_proj_novo').checked = data.PROJETO_NOVO_ITEM == '1';
            document.getElementById('form_proj_pecas_prot').checked = data.PROJETO_PECAS_PROTOTIPOS == '1';
            document.getElementById('form_proj_alteracao').checked = data.PROJETO_ALTERACAO == '1';
            document.getElementById('form_proj_pecas_prod').checked = data.PROJETO_PECAS_PRODUCAO == '1';
            document.getElementById('form_proj_exigencias').value = data.EXIGENCIAS_CLIENTE || '';
            document.getElementById('form_proj_obs').value = data.OBSERVACOES_PROJETO || '';

            document.getElementById('form_doc_2d').checked = data.DOC_2D == '1';
            document.getElementById('form_doc_normas').checked = data.DOC_NORMAS == '1';
            document.getElementById('form_doc_3d').checked = data.DOC_3D == '1';
            document.getElementById('form_doc_imagens').checked = data.DOC_IMAGENS == '1';
            document.getElementById('form_doc_outro').value = data.DOC_OUTRO || '';

            document.getElementById('form_peca_moldagem').checked = data.PECAS_MOLDAGEM == '1';
            document.getElementById('form_peca_corte').checked = data.PECAS_CORTE == '1';
            document.getElementById('form_peca_montagem').checked = data.PECAS_MONTAGEM == '1';
            document.getElementById('form_peca_pintura').checked = data.PECAS_PINTURA == '1';
            document.getElementById('form_peca_componentes').checked = data.PECAS_COMPONENTES == '1';
            document.getElementById('form_peca_embalagem').checked = data.PECAS_EMBALAGEM == '1';
            document.getElementById('form_proc_ferramental_def').checked = data.PROCESSO_FERRAMENTAL_DEFINITIVO == '1';
            document.getElementById('form_proc_ferramental_prot').checked = data.PROCESSO_FERRAMENTAL_PROTOTIPO == '1';
            document.getElementById('form_proc_meios_prod').checked = data.PROCESSO_MEIOS_PRODUTIVOS == '1';
            document.getElementById('form_proc_custo_dev').checked = data.PROCESSO_CUSTO_DESENVOLVIMENTO == '1';
            document.getElementById('form_proc_testes_homolog').checked = data.PROCESSO_TESTES_HOMOLOGACAO == '1';
            document.getElementById('form_fornecedor_tinta').value = data.FORNECEDOR_TINTA || '';
            document.getElementById('form_obs_orcamento').value = data.OBSERVACOES_ORCAMENTO || '';

            // Campos de análise
            document.getElementById('analise_responsavel').value = data.RESPONSAVEL_ANALISE || '';
            document.getElementById('analise_complexidade').value = data.COMPLEXIDADE || '';
            document.getElementById('analise_horas_estimadas').value = data.HORAS_ESTIMADAS || '';
            document.getElementById('analise_observacoes').value = data.OBSERVACOES_ANALISE || data.OBSERVACOES_PROJETO || '';
        }

        async function populateGestorDropdown() {
            try {
                const selectElement = document.getElementById('select-gestor');
                if (!selectElement) {
                    console.error("Elemento select-gestor não encontrado.");
                    return;
                }
                
                // Verifica se queryGestores está configurado
                if (!componentData.queryGestores || componentData.queryGestores.trim() === '') {
                    console.error("Query de gestores não configurada. Configure queryGestores no editor Mitra.");
                    selectElement.innerHTML = '<option value="">Query não configurada</option>';
                    return;
                }
                
                // queryMitra recebe a query diretamente como string
                const result = await queryMitra(componentData.queryGestores);
                
                if (!result || !result.data || result.data.length === 0) {
                    console.warn("Nenhum gestor encontrado no banco de dados.");
                    selectElement.innerHTML = '<option value="">Nenhum gestor encontrado</option>';
                    return;
                }
                
                const gestores = mapQueryToObject(result);

                selectElement.innerHTML = '';

                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = 'Selecione um gestor';
                selectElement.appendChild(defaultOption);

                gestores.forEach(gestor => {
                    const option = document.createElement('option');
                    option.value = gestor.ID || '';
                    option.textContent = gestor.NOME || 'Sem nome';
                    selectElement.appendChild(option);
                });

            } catch (error) {
                console.error("Erro ao popular o dropdown de gestores:", error);
                const selectElement = document.getElementById('select-gestor');
                if (selectElement) {
                    selectElement.innerHTML = '<option value="">Erro ao carregar gestores</option>';
                }
            }
        }
        
        async function loadAndPopulateData() {
            try {
                // CORREÇÃO CRÍTICA: queryMitra recebe a query diretamente como string
                const result = await queryMitra(componentData.queryData);
                if (!result || !result.data || result.data.length === 0) {
                    console.error("Dados da solicitação não encontrados para o ID fornecido.");
                    return;
                }
                const data = mapQueryToObject(result)[0];
                populateAllFields(data);
            } catch (error) {
                console.error("Erro ao carregar e popular os dados do card:", error);
            }
        }
        
        async function saveData() {
            const btn = document.getElementById('save-button');
            const originalHTML = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = `<i class="ph ph-spinner animate-spin"></i> Salvando...`;

                // --- SET HEADER VARIABLES ---
                await setVariableMitra({ name: ':VAR_DESCRICAO', content: document.getElementById('input-descricao').value });
                await setVariableMitra({ name: ':VAR_GESTOR_ID', content: document.getElementById('select-gestor').value });
                await setVariableMitra({ name: ':VAR_PRIORIDADE', content: document.getElementById('select-prioridade').value });
                await setVariableMitra({ name: ':VAR_NUM_SO', content: document.getElementById('input-num-so').value });
                await setVariableMitra({ name: ':VAR_DATA', content: document.getElementById('input-data').value || null });
                await setVariableMitra({ name: ':VAR_CLIENTE', content: document.getElementById('select-cliente').value });
                await setVariableMitra({ name: ':VAR_TIPO_CLIENTE', content: document.getElementById('select-tipo-cliente').value });
                await setVariableMitra({ name: ':VAR_CONTATO', content: document.getElementById('input-contato').value });
                await setVariableMitra({ name: ':VAR_EMAIL', content: document.getElementById('input-email').value });
                await setVariableMitra({ name: ':VAR_D_RETORNO', content: document.getElementById('input-data-retorno').value || null });
                await setVariableMitra({ name: ':VAR_NUM_RFQ', content: document.getElementById('input-num-rfq').value });
                await setVariableMitra({ name: ':VAR_ACORDO_CONF', content: document.getElementById('select-acordo-conf').value });
                await setVariableMitra({ name: ':VAR_MANUAL_QUALIDADE', content: document.getElementById('select-manual-qualidade').value });
                await setVariableMitra({ name: ':VAR_COND_PAG_PECA', content: document.getElementById('input-cond-pag-peca').value });
                await setVariableMitra({ name: ':VAR_COND_PAG_FERRAMENTAL', content: document.getElementById('input-cond-pag-ferramental').value });
                await setVariableMitra({ name: ':VAR_COND_ENTREGA', content: document.getElementById('input-cond-entrega').value });
                await setVariableMitra({ name: ':VAR_SOP', content: document.getElementById('input-sop').value || null });
                
                // --- SET FORMULÁRIO VARIABLES ---
                const getCheckboxValue = (id) => document.getElementById(id).checked ? '1' : '0';
                
                await setVariableMitra({ name: ':VAR_PART_NUMBER', content: document.getElementById('form_part_number').value });
                await setVariableMitra({ name: ':VAR_DESC_PECA', content: document.getElementById('form_descricao_peca').value });
                await setVariableMitra({ name: ':VAR_PROJETO_TXT', content: document.getElementById('form_projeto').value });
                await setVariableMitra({ name: ':VAR_EMB_RET', content: getCheckboxValue('form_embalagem_retornavel') });
                await setVariableMitra({ name: ':VAR_EMB_DESC', content: getCheckboxValue('form_embalagem_descartavel') });
                await setVariableMitra({ name: ':VAR_VOL_ANO1', content: document.getElementById('form_volume_ano1').value });
                await setVariableMitra({ name: ':VAR_VOL_ANO2', content: document.getElementById('form_volume_ano2').value });
                await setVariableMitra({ name: ':VAR_VOL_ANO3', content: document.getElementById('form_volume_ano3').value });
                await setVariableMitra({ name: ':VAR_DATA_FORM', content: document.getElementById('form_data').value || null });
                await setVariableMitra({ name: ':VAR_DATA_RET_FORM', content: document.getElementById('form_data_retorno').value || null });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_SPRAY', content: getCheckboxValue('form_proc_atual_spray') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_RTM', content: getCheckboxValue('form_proc_atual_rtm') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_SMC', content: getCheckboxValue('form_proc_atual_smc') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_PINTURA', content: getCheckboxValue('form_proc_atual_pintura') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_INJETADO', content: getCheckboxValue('form_proc_atual_injetado') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_CHAPA', content: getCheckboxValue('form_proc_atual_chapa') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_OUTRO', content: document.getElementById('form_proc_atual_outro').value });
                await setVariableMitra({ name: ':VAR_PROC_ORC_SPRAY', content: getCheckboxValue('form_proc_orc_spray') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_RTM', content: getCheckboxValue('form_proc_orc_rtm') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_SMC', content: getCheckboxValue('form_proc_orc_smc') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_PINTURA', content: getCheckboxValue('form_proc_orc_pintura') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_OUTRO', content: document.getElementById('form_proc_orc_outro').value });
                await setVariableMitra({ name: ':VAR_PROJ_ALT_SIM', content: getCheckboxValue('form_proj_alter_sim') });
                await setVariableMitra({ name: ':VAR_PROJ_ALT_NAO', content: getCheckboxValue('form_proj_alter_nao') });
