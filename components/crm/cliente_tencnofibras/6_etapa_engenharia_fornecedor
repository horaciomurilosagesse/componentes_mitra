    <script>
        function switchTab(element, tabId) {
            document.querySelectorAll('.tab-link').forEach(t => t.classList.remove('active'));
            element.classList.add('active');
            
            const preview = document.getElementById('content-preview');
            const blank = document.getElementById('content-blank');

            if (tabId === 'preview') {
                preview.classList.remove('hidden');
                blank.classList.add('hidden');
                blank.classList.remove('flex');
            } else {
                preview.classList.add('hidden');
                blank.classList.remove('hidden');
                blank.classList.add('flex');
            }
        }

        async function reprovarParaCompras() {
            try {
                await setVariableMitra({ name: ':VAR_NOVA_FASE', content: '5' });
                await actionMitra({ id: 10 });
            } catch (error) {
                console.error("Erro ao reprovar para Compras:", error);
            }
        }

        async function aprovarValidado() {
            try {
                await setVariableMitra({ name: ':VAR_NOVA_FASE', content: '7' }); // Supondo que 'Validado' seja a fase 7
                await actionMitra({ id: 11 });
            } catch (error) {
                console.error("Erro ao aprovar para Validado:", error);
            }
        }
    </script>
