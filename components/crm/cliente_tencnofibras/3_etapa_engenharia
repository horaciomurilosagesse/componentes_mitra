    <script>
        const MITRA_UPDATE_EVENT_NAME = 'mitra-update-crm-details-component';

        function updateMitra() {
            document.body.dispatchEvent(new CustomEvent(MITRA_UPDATE_EVENT_NAME));
        }
        
        function mapQueryToObject(queryResult) {
            if (!queryResult || !queryResult.data || !queryResult.headers) return [];
            const headers = queryResult.headers.map(h => h.name.toUpperCase());
            return queryResult.data.map(row => {
                const obj = {};
                headers.forEach((header, index) => {
                    obj[header] = row[index];
                });
                return obj;
            });
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebar-overlay');
            if (sidebar && overlay) {
                sidebar.classList.toggle('mobile-open');
                sidebar.classList.toggle('hidden');
                overlay.classList.toggle('hidden');
            }
        }

        // Função segura para setar valores em inputs
        function safeSet(id, value) {
            const el = document.getElementById(id);
            if (el) {
                el.value = value || '';
            } else {
                console.warn(`Elemento não encontrado: ${id}`);
            }
        }

        // Função segura para setar checkboxes
        function safeCheck(id, value) {
            const el = document.getElementById(id);
            if (el) {
                el.checked = (value == '1' || value === true);
            } else {
                console.warn(`Checkbox não encontrado: ${id}`);
            }
        }

        async function populateGestorDropdown() {
            try {
                const selectElement = document.getElementById('select-gestor');
                if (!selectElement) {
                    console.error("Elemento select-gestor não encontrado.");
                    return;
                }
                
                // Verifica se queryGestores está configurado
                if (!componentData.queryGestores || componentData.queryGestores.trim() === '') {
                    console.error("Query de gestores não configurada. Configure queryGestores no editor Mitra.");
                    selectElement.innerHTML = '<option value="">Query não configurada</option>';
                    return;
                }
                
                // queryMitra recebe a query diretamente como string
                const result = await queryMitra(componentData.queryGestores);
                
                if (!result || !result.data || result.data.length === 0) {
                    console.warn("Nenhum gestor encontrado no banco de dados.");
                    selectElement.innerHTML = '<option value="">Nenhum gestor encontrado</option>';
                    return;
                }
                
                const gestores = mapQueryToObject(result);

                selectElement.innerHTML = '';

                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = 'Selecione um gestor';
                selectElement.appendChild(defaultOption);

                gestores.forEach(gestor => {
                    const option = document.createElement('option');
                    option.value = gestor.ID || '';
                    option.textContent = gestor.NOME || 'Sem nome';
                    selectElement.appendChild(option);
                });

            } catch (error) {
                console.error("Erro ao popular o dropdown de gestores:", error);
                const selectElement = document.getElementById('select-gestor');
                if (selectElement) {
                    selectElement.innerHTML = '<option value="">Erro ao carregar gestores</option>';
                }
            }
        }

        async function loadAndPopulateData() {
            try {
                // CORREÇÃO CRÍTICA: queryMitra recebe a query diretamente como string
                const result = await queryMitra(componentData.queryData);
                if (!result || !result.data || result.data.length === 0) {
                    console.error("Dados da solicitação não encontrados.");
                    const sidebarTitle = document.getElementById('sidebar-title');
                    if (sidebarTitle) sidebarTitle.innerText = "Erro: Solicitação não encontrada";
                    return;
                }
                const data = mapQueryToObject(result)[0];
                populateAllFields(data);
            } catch (error) {
                console.error("Erro ao carregar e popular dados:", error);
                const sidebarTitle = document.getElementById('sidebar-title');
                if (sidebarTitle) sidebarTitle.innerText = "Erro ao Carregar";
            }
        }

        function populateAllFields(data) {
            const formatDate = (dateString) => (dateString || '').substring(0, 10);

            // --- POPULATE SIDEBAR ---
            const sidebarTitle = document.getElementById('sidebar-title');
            if (sidebarTitle) sidebarTitle.innerText = data.TITULO || 'Carregando...';
            
            const sidebarId = document.getElementById('sidebar-id');
            if (sidebarId) sidebarId.innerText = `#${data.ID || 'N/A'}`;
            
            const sidebarGestor = document.getElementById('sidebar-gestor');
            if (sidebarGestor) sidebarGestor.innerText = data.GESTOR || `Gestor ${data.ID_GESTOR || 'N/A'}`;
            
            const sidebarData = document.getElementById('sidebar-data');
            if (sidebarData) sidebarData.innerText = formatDate(data.DATA_CRIACAO) || '-';

            // --- POPULATE ABA COMERCIAL ---
            safeSet('input-descricao', data.TITULO);
            
            const selectGestor = document.getElementById('select-gestor');
            if (selectGestor && selectGestor.value === '') {
                selectGestor.value = data.ID_GESTOR || '';
            }
            
            safeSet('select-prioridade', data.PRIORIDADE);
            safeSet('input-num-so', data.NUM_SO);
            safeSet('input-data', formatDate(data.DATA_CRIACAO));
            
            const selectCliente = document.getElementById('select-cliente');
            if (selectCliente) selectCliente.value = data.CLIENTE || '';
            
            safeSet('select-tipo-cliente', data.TIPO);
            safeSet('input-contato', data.CONTATO);
            safeSet('input-email', data.EMAIL);
            safeSet('input-data-retorno', formatDate(data.DATA_RETORNO));
            safeSet('input-num-rfq', data.NUM_RFQ);
            safeSet('select-acordo-conf', data.ACORDO_CONFIDENCIALIDADE);
            safeSet('select-manual-qualidade', data.MANUAL_QUALIDADE);
            safeSet('input-cond-pag-peca', data.COND_PAG_PECA);
            safeSet('input-cond-pag-ferramental', data.COND_PAG_FERRAMENTAL);
            safeSet('input-cond-entrega', data.CONDICAO_ENTREGA);
            safeSet('input-sop', formatDate(data.SOP));

            safeSet('form_part_number', data.PART_NUMBER);
            safeSet('form_descricao_peca', data.DESCRICAO_PECA);
            safeSet('form_cliente', data.CLIENTE);
            safeSet('form_projeto', data.PROJETO_TEXTO);
            safeSet('form_num_so', data.NUM_SO);
            
            safeCheck('form_embalagem_retornavel', data.EMBALAGEM_RETORNAVEL);
            safeCheck('form_embalagem_descartavel', data.EMBALAGEM_DESCARTAVEL);
            
            safeSet('form_volume_ano1', data.VOLUME_ANO1);
            safeSet('form_volume_ano2', data.VOLUME_ANO2);
            safeSet('form_volume_ano3', data.VOLUME_ANO3);
            
            safeSet('form_data', formatDate(data.DATA_FORM));
            safeSet('form_data_retorno', formatDate(data.DATA_RETORNO_FORM));
            
            safeCheck('form_proc_atual_spray', data.PROC_ATUAL_SPRAYUP_HAND);
            safeCheck('form_proc_atual_rtm', data.PROC_ATUAL_RTM);
            safeCheck('form_proc_atual_smc', data.PROC_ATUAL_SMC);
            safeCheck('form_proc_atual_pintura', data.PROC_ATUAL_PINTURA);
            safeCheck('form_proc_atual_injetado', data.PROC_ATUAL_INJETADO);
            safeCheck('form_proc_atual_chapa', data.PROC_ATUAL_CHAPA_METALICA);
            safeSet('form_proc_atual_outro', data.PROC_ATUAL_OUTRO);
            
            safeCheck('form_proc_orc_spray', data.PROC_ORCAMENTO_SPRAYUP_HAND);
            safeCheck('form_proc_orc_rtm', data.PROC_ORCAMENTO_RTM);
            safeCheck('form_proc_orc_smc', data.PROC_ORCAMENTO_SMC);
            safeCheck('form_proc_orc_pintura', data.PROC_ORCAMENTO_PINTURA);
            safeSet('form_proc_orc_outro', data.PROC_ORCAMENTO_OUTRO);
            
            safeCheck('form_proj_alter_sim', data.NECESSITA_ALTERACAO_PROJETO_SIM);
            safeCheck('form_proj_alter_nao', data.NECESSITA_ALTERACAO_PROJETO_NAO);
            safeCheck('form_proj_resp_tec', data.RESPONSAVEL_ALTERACAO_TECNOFIBRAS);
            safeCheck('form_proj_resp_cli', data.RESPONSAVEL_ALTERACAO_CLIENTE);
            safeCheck('form_proj_novo', data.PROJETO_NOVO_ITEM);
            safeCheck('form_proj_pecas_prot', data.PROJETO_PECAS_PROTOTIPOS);
            safeCheck('form_proj_alteracao', data.PROJETO_ALTERACAO);
            safeCheck('form_proj_pecas_prod', data.PROJETO_PECAS_PRODUCAO);
            safeSet('form_proj_exigencias', data.EXIGENCIAS_CLIENTE);
            safeSet('form_proj_obs', data.OBSERVACOES_PROJETO);
            
            safeCheck('form_doc_2d', data.DOC_2D);
            safeCheck('form_doc_normas', data.DOC_NORMAS);
            safeCheck('form_doc_3d', data.DOC_3D);
            safeCheck('form_doc_imagens', data.DOC_IMAGENS);
            safeSet('form_doc_outro', data.DOC_OUTRO);
            
            safeCheck('form_peca_moldagem', data.PECAS_MOLDAGEM);
            safeCheck('form_peca_corte', data.PECAS_CORTE);
            safeCheck('form_peca_montagem', data.PECAS_MONTAGEM);
            safeCheck('form_peca_pintura', data.PECAS_PINTURA);
            safeCheck('form_peca_componentes', data.PECAS_COMPONENTES);
            safeCheck('form_peca_embalagem', data.PECAS_EMBALAGEM);
            safeCheck('form_proc_ferramental_def', data.PROCESSO_FERRAMENTAL_DEFINITIVO);
            safeCheck('form_proc_ferramental_prot', data.PROCESSO_FERRAMENTAL_PROTOTIPO);
            safeCheck('form_proc_meios_prod', data.PROCESSO_MEIOS_PRODUTIVOS);
            safeCheck('form_proc_custo_dev', data.PROCESSO_CUSTO_DESENVOLVIMENTO);
            safeCheck('form_proc_testes_homolog', data.PROCESSO_TESTES_HOMOLOGACAO);
            
            safeSet('form_fornecedor_tinta', data.FORNECEDOR_TINTA);
            safeSet('form_obs_orcamento', data.OBSERVACOES_ORCAMENTO);

            safeSet('analise_responsavel', data.RESPONSAVEL_ANALISE);
            safeSet('analise_complexidade', data.COMPLEXIDADE);
            safeSet('analise_horas_estimadas', data.HORAS_ESTIMADAS);
            safeSet('analise_observacoes', data.OBSERVACOES_ANALISE || data.OBSERVACOES_PROJETO);
        }

        async function saveData() {
            const btn = document.getElementById('save-button');
            const originalHTML = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = `<i class="ph ph-spinner animate-spin"></i> Salvando...`;

                // --- SET HEADER VARIABLES ---
                await setVariableMitra({ name: ':VAR_DESCRICAO', content: document.getElementById('input-descricao').value });
                await setVariableMitra({ name: ':VAR_GESTOR_ID', content: document.getElementById('select-gestor').value });
                await setVariableMitra({ name: ':VAR_PRIORIDADE', content: document.getElementById('select-prioridade').value });
                await setVariableMitra({ name: ':VAR_NUM_SO', content: document.getElementById('input-num-so').value });
                await setVariableMitra({ name: ':VAR_DATA', content: document.getElementById('input-data').value || null });
                await setVariableMitra({ name: ':VAR_CLIENTE', content: document.getElementById('select-cliente').value });
                await setVariableMitra({ name: ':VAR_TIPO_CLIENTE', content: document.getElementById('select-tipo-cliente').value });
                await setVariableMitra({ name: ':VAR_CONTATO', content: document.getElementById('input-contato').value });
                await setVariableMitra({ name: ':VAR_EMAIL', content: document.getElementById('input-email').value });
                await setVariableMitra({ name: ':VAR_D_RETORNO', content: document.getElementById('input-data-retorno').value || null });
                await setVariableMitra({ name: ':VAR_NUM_RFQ', content: document.getElementById('input-num-rfq').value });
                await setVariableMitra({ name: ':VAR_ACORDO_CONF', content: document.getElementById('select-acordo-conf').value });
                await setVariableMitra({ name: ':VAR_MANUAL_QUALIDADE', content: document.getElementById('select-manual-qualidade').value });
                await setVariableMitra({ name: ':VAR_COND_PAG_PECA', content: document.getElementById('input-cond-pag-peca').value });
                await setVariableMitra({ name: ':VAR_COND_PAG_FERRAMENTAL', content: document.getElementById('input-cond-pag-ferramental').value });
                await setVariableMitra({ name: ':VAR_COND_ENTREGA', content: document.getElementById('input-cond-entrega').value });
                await setVariableMitra({ name: ':VAR_SOP', content: document.getElementById('input-sop').value || null });

                // --- SET FORMULÁRIO VARIABLES ---
                const getCheckboxValue = (id) => document.getElementById(id).checked ? '1' : '0';
                
                await setVariableMitra({ name: ':VAR_PART_NUMBER', content: document.getElementById('form_part_number').value });
                await setVariableMitra({ name: ':VAR_DESC_PECA', content: document.getElementById('form_descricao_peca').value });
                await setVariableMitra({ name: ':VAR_PROJETO_TXT', content: document.getElementById('form_projeto').value });
                await setVariableMitra({ name: ':VAR_EMB_RET', content: getCheckboxValue('form_embalagem_retornavel') });
                await setVariableMitra({ name: ':VAR_EMB_DESC', content: getCheckboxValue('form_embalagem_descartavel') });
                await setVariableMitra({ name: ':VAR_VOL_ANO1', content: document.getElementById('form_volume_ano1').value });
                await setVariableMitra({ name: ':VAR_VOL_ANO2', content: document.getElementById('form_volume_ano2').value });
                await setVariableMitra({ name: ':VAR_VOL_ANO3', content: document.getElementById('form_volume_ano3').value });
                await setVariableMitra({ name: ':VAR_DATA_FORM', content: document.getElementById('form_data').value || null });
                await setVariableMitra({ name: ':VAR_DATA_RET_FORM', content: document.getElementById('form_data_retorno').value || null });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_SPRAY', content: getCheckboxValue('form_proc_atual_spray') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_RTM', content: getCheckboxValue('form_proc_atual_rtm') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_SMC', content: getCheckboxValue('form_proc_atual_smc') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_PINTURA', content: getCheckboxValue('form_proc_atual_pintura') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_INJETADO', content: getCheckboxValue('form_proc_atual_injetado') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_CHAPA', content: getCheckboxValue('form_proc_atual_chapa') });
                await setVariableMitra({ name: ':VAR_PROC_ATUAL_OUTRO', content: document.getElementById('form_proc_atual_outro').value });
                await setVariableMitra({ name: ':VAR_PROC_ORC_SPRAY', content: getCheckboxValue('form_proc_orc_spray') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_RTM', content: getCheckboxValue('form_proc_orc_rtm') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_SMC', content: getCheckboxValue('form_proc_orc_smc') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_PINTURA', content: getCheckboxValue('form_proc_orc_pintura') });
                await setVariableMitra({ name: ':VAR_PROC_ORC_OUTRO', content: document.getElementById('form_proc_orc_outro').value });
                await setVariableMitra({ name: ':VAR_PROJ_ALT_SIM', content: getCheckboxValue('form_proj_alter_sim') });
                await setVariableMitra({ name: ':VAR_PROJ_ALT_NAO', content: getCheckboxValue('form_proj_alter_nao') });
                await setVariableMitra({ name: ':VAR_PROJ_RESP_TEC', content: getCheckboxValue('form_proj_resp_tec') });
                await setVariableMitra({ name: ':VAR_PROJ_RESP_CLI', content: getCheckboxValue('form_proj_resp_cli') });
                await setVariableMitra({ name: ':VAR_PROJ_NOVO', content: getCheckboxValue('form_proj_novo') });
                await setVariableMitra({ name: ':VAR_PROJ_PROT', content: getCheckboxValue('form_proj_pecas_prot') });
                await setVariableMitra({ name: ':VAR_PROJ_ALT', content: getCheckboxValue('form_proj_alteracao') });
                await setVariableMitra({ name: ':VAR_PROJ_PROD', content: getCheckboxValue('form_proj_pecas_prod') });
                await setVariableMitra({ name: ':VAR_PROJ_EXIG', content: document.getElementById('form_proj_exigencias').value });
                await setVariableMitra({ name: ':VAR_PROJ_OBS', content: document.getElementById('form_proj_obs').value });
                await setVariableMitra({ name: ':VAR_DOC_2D', content: getCheckboxValue('form_doc_2d') });
                await setVariableMitra({ name: ':VAR_DOC_NORMAS', content: getCheckboxValue('form_doc_normas') });
                await setVariableMitra({ name: ':VAR_DOC_3D', content: getCheckboxValue('form_doc_3d') });
                await setVariableMitra({ name: ':VAR_DOC_IMAGENS', content: getCheckboxValue('form_doc_imagens') });
                await setVariableMitra({ name: ':VAR_DOC_OUTRO', content: document.getElementById('form_doc_outro').value });
                await setVariableMitra({ name: ':VAR_PECA_MOLD', content: getCheckboxValue('form_peca_moldagem') });
                await setVariableMitra({ name: ':VAR_PECA_CORTE', content: getCheckboxValue('form_peca_corte') });
                await setVariableMitra({ name: ':VAR_PECA_MONT', content: getCheckboxValue('form_peca_montagem') });
                await setVariableMitra({ name: ':VAR_PECA_PINT', content: getCheckboxValue('form_peca_pintura') });
                await setVariableMitra({ name: ':VAR_PECA_COMP', content: getCheckboxValue('form_peca_componentes') });
                await setVariableMitra({ name: ':VAR_PECA_EMB', content: getCheckboxValue('form_peca_embalagem') });
                await setVariableMitra({ name: ':VAR_PROC_FERR_DEF', content: getCheckboxValue('form_proc_ferramental_def') });
                await setVariableMitra({ name: ':VAR_PROC_FERR_PROT', content: getCheckboxValue('form_proc_ferramental_prot') });
                await setVariableMitra({ name: ':VAR_PROC_MEIOS', content: getCheckboxValue('form_proc_meios_prod') });
                await setVariableMitra({ name: ':VAR_PROC_CUSTO', content: getCheckboxValue('form_proc_custo_dev') });
                await setVariableMitra({ name: ':VAR_PROC_TESTES', content: getCheckboxValue('form_proc_testes_homolog') });
                await setVariableMitra({ name: ':VAR_FORN_TINTA', content: document.getElementById('form_fornecedor_tinta').value });
                await setVariableMitra({ name: ':VAR_OBS_ORC', content: document.getElementById('form_obs_orcamento').value });

                // --- EXECUTE DBACTIONS ---
                await dbactionMitra(3); // Salva Header (TB_SOLICITACOES)
                await dbactionMitra(6); // Salva Formulário (TB_FORMULARIO_COMERCIAL)
                
                // --- ATUALIZA A PLATAFORMA ---
                updateMitra();
                
                await loadAndPopulateData();

            } catch (error) {
                console.error("Erro ao salvar os dados:", error);
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalHTML;
            }
        }

        // Alternar Abas Principais
        function switchMainTab(tabName) {
            document.getElementById('content-comercial').classList.add('hidden');
            document.getElementById('content-compras').classList.add('hidden');
            
            const tabComercial = document.getElementById('tab-comercial');
            const tabCompras = document.getElementById('tab-compras');
            
            if (tabComercial) {
                tabComercial.classList.remove('border-brand-blueDark', 'text-brand-blueDark');
                tabComercial.classList.add('border-transparent', 'text-slate-500');
            }
            
            if (tabCompras) {
                tabCompras.classList.remove('border-brand-blueDark', 'text-brand-blueDark');
                tabCompras.classList.add('border-transparent', 'text-slate-500');
            }

            document.getElementById(`content-${tabName}`).classList.remove('hidden');
            
            if (tabName === 'comercial' && tabComercial) {
                tabComercial.classList.remove('border-transparent', 'text-slate-500');
                tabComercial.classList.add('border-brand-blueDark', 'text-brand-blueDark');
            } else if (tabName === 'compras' && tabCompras) {
                tabCompras.classList.remove('border-transparent', 'text-slate-500');
                tabCompras.classList.add('border-brand-blueDark', 'text-brand-blueDark');
            }
        }

        // Alternar Sub-Abas
        function switchSubTab(element, subTabName) {
            const tabs = document.querySelectorAll('.subtab-link');
            tabs.forEach(t => t.classList.remove('active'));
            element.classList.add('active');
        }

        // Adicionar Linha (Compras)
        function adicionarLinha() {
            const tbody = document.getElementById('tbody-compras');
            const rowCount = tbody.rows.length + 32; 
            const row = document.createElement('tr');
            row.className = "hover:bg-slate-50 group border-b border-slate-100 animate-pulse";
            setTimeout(() => row.classList.remove('animate-pulse'), 500);

            row.innerHTML = `
                <td class="table-cell font-medium text-slate-800 col-0">${rowCount}</td>
                <td class="table-cell col-1"><input type="text" class="table-input" placeholder="Descrição..."></td>
                <td class="table-cell col-2"><input type="text" class="table-input" placeholder="Vol..."></td>
                <td class="table-cell col-3"><input type="text" class="table-input" placeholder="Grupo..."></td>
                <td class="table-cell col-4"><input type="text" class="table-input" placeholder="Obs..."></td>
                <td class="table-cell text-center col-5">-</td>
                <td class="table-cell text-center col-6"><input type="date" class="bg-transparent outline-none text-xs text-center w-full"></td>
                <td class="table-cell text-center col-7">
                    <button onclick="this.closest('tr').remove()" class="text-slate-400 hover:text-red-500 transition-colors">
                        <i class="ph ph-trash"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(row);
            
            refreshColumnVisibility();
        }

        function toggleColumnMenu() {
            const menu = document.getElementById('column-menu');
            menu.classList.toggle('hidden');
        }

        document.addEventListener('click', function(event) {
            const menu = document.getElementById('column-menu');
            const button = document.querySelector('button[title="Visualizar Colunas"]');
            if (menu && !menu.classList.contains('hidden') && !menu.contains(event.target) && button && !button.contains(event.target)) {
                menu.classList.add('hidden');
            }
        });

        const columnState = { 1: true, 2: true, 3: true, 4: true, 5: true, 6: true };

        function toggleColumn(colIndex) {
            columnState[colIndex] = !columnState[colIndex];
            refreshColumnVisibility();
        }

        function refreshColumnVisibility() {
            for (let i = 1; i <= 6; i++) {
                const cells = document.querySelectorAll(`.col-${i}`);
                cells.forEach(cell => {
                    cell.style.display = columnState[i] ? '' : 'none';
                });
            }
        }

        async function reprovarParaAnaliseEng() {
            const btn = document.getElementById('btn-reprovar');
            if (!btn) return;
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="ph ph-spinner animate-spin text-lg"></i> Processando...';
                
                await setVariableMitra({ name: ':VAR_NOVA_FASE', content: '2' });
                await actionMitra({ id: 4 });
            } catch (error) {
                console.error("Erro ao reprovar para Análise (Eng):", error);
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        async function aprovarParaAnaliseComp() {
            const btn = document.getElementById('btn-aprovar');
            if (!btn) return;
            const originalText = btn.innerHTML;
            try {
                btn.disabled = true;
                btn.innerHTML = '<i class="ph ph-spinner animate-spin text-lg"></i> Processando...';
                
                await setVariableMitra({ name: ':VAR_NOVA_FASE', content: '4' });
                await actionMitra({ id: 5 });
            } catch (error) {
                console.error("Erro ao aprovar para Análise (Comp):", error);
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        async function initializeComponent() {
            await populateGestorDropdown();
            await loadAndPopulateData();
            switchMainTab('comercial');
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.body.addEventListener(MITRA_UPDATE_EVENT_NAME, loadAndPopulateData);

            const waitForMitraAndInit = () => {
                const maxWaitTime = 5000;
                const intervalTime = 100;
                const startTime = Date.now();
                
                const checkInterval = setInterval(() => {
                    if (window.componentData && window.componentData.queryData) {
                        clearInterval(checkInterval);
                        initializeComponent();
                    } else if (Date.now() - startTime > maxWaitTime) {
                        clearInterval(checkInterval);
                        console.error("Erro: As configurações do componente (componentData) não foram carregadas a tempo.");
                        document.body.innerHTML = `<div class="p-8 text-center text-red-700 bg-red-50 h-full flex items-center justify-center">Erro Crítico: As configurações do componente não foram carregadas da plataforma.</div>`;
                    }
                }, intervalTime);
            };
            waitForMitraAndInit();
        });
    </script>
</body>
</html>
